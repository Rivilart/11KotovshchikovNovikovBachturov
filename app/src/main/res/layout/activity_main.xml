<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#516DFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:background="#A5B2F3"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/my_device"
            tools:srcCompat="@drawable/my_device"></ImageView>

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Мое смарт устройство">
            ></TextView>>
    </LinearLayout>

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="110dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/km"
            tools:srcCompat="@drawable/km"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:text="1,3 km">
            ></TextView>>
    </LinearLayout>
    >

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="210dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/tinder"
            tools:srcCompat="@drawable/tinder"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:text="59 kcal">
            ></TextView>>
    </LinearLayout>
    >

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="310dp"
        android:background="#E4E4E4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/time"></ImageView>

        <TextView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:text="30 min">
            ></TextView>>
    </LinearLayout>
    >

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="410dp"
        android:background="#E4E4E4"
        android:onClick="onClickStepsActivity"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/reverce"
            tools:srcCompat="@drawable/reverce"></ImageView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="25dp"
            android:text="1583 step">
            ></TextView>>
    </LinearLayout>
    >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="510dp"
        android:layout_marginRight="185dp"
        android:background="#E4E4E4"
        android:onClick="step"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/wi_fi"
            tools:srcCompat="@drawable/wi_fi"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-65dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/wi_fi_diagram"
            tools:srcCompat="@drawable/wi_fi_diagram"></ImageView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-70dp"
            android:layout_marginTop="25dp"
            android:text="62 kg">
            ></TextView>>
    </LinearLayout>
    >

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="510dp"
        android:background="#E4E4E4"
        android:onClick="step"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076">
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/life"
            tools:srcCompat="@drawable/life"></ImageView>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_marginLeft="-52dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/life_diagram"
            tools:srcCompat="@drawable/life_diagram"></ImageView>

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-70dp"
            android:layout_marginTop="25dp"
            android:text="82 bmp">
            ></TextView>>

    </LinearLayout>
    >
</androidx.constraintlayout.widget.ConstraintLayout>